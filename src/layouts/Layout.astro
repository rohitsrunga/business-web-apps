---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Experience Casco Bay Hotel - Your Maine escape in South Portland." } = Astro.props;
const isHome = Astro.url.pathname === '/';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
	</head>
	<body>
		<header id="main-header" class={isHome ? "" : "scrolled"}>
			<div class="header-container-press">
				<div class="header-left">
					<a href="/" class="logo-horizontal">
						<span class="logo-main">Casco Bay Hotel</span>
					</a>
					<div class="header-contact-info">
						<span>80 John Roberts Rd, South Portland, ME 04106</span>
						<span class="dot">•</span>
						<span>(207) 558-4341</span>
					</div>
				</div>
				<div class="header-right">
					<nav class="direct-nav">
						<a href="/business-web-apps/rooms">Rooms</a>
						<a href={isHome ? "#amenities" : "/#amenities"}>Amenities</a>
						<a href={isHome ? "#location" : "/#location"}>Location</a>
					</nav>
					<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me071" class="btn-book-now-top">
						Book Now
					</a>
				</div>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer>
			<div class="container footer-grid">
				<div class="footer-brand">
					<h3>Casco Bay Hotel</h3>
					<div class="section-divider"></div>
					<p>80 John Roberts Rd, South Portland, ME 04106</p>
					<p>(207) 558-4341</p>
				</div>
				<nav class="footer-nav">
					<div class="nav-column">
						<h4>Explore</h4>
						<a href="/rooms">Rooms & Suites</a>
						<a href="#amenities">Wellness & Dining</a>
						<a href="#location">Area Guide</a>
					</div>
					<div class="nav-column">
						<h4>Legal</h4>
						<a href="/privacy">Privacy</a>
						<a href="/terms">Terms</a>
					</div>
				</nav>
			</div>
		</footer>

		<style is:global>
			html {
				scroll-behavior: smooth;
			}
			#main-header {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				padding: 2rem 5%;
				z-index: 1000;
				display: flex;
				justify-content: center;
				transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
			}

			#main-header.scrolled {
				background: var(--white);
				padding: 1rem 5%;
				box-shadow: 0 4px 30px rgba(0,0,0,0.05);
			}

			.header-container-press {
				display: flex;
				align-items: center;
				justify-content: space-between;
				width: 100%;
				max-width: 1400px;
			}

			.header-left {
				display: flex;
				align-items: center;
				gap: 1.5rem;
			}

			.logo-horizontal {
				color: var(--white);
				transition: color 0.4s ease;
				flex-shrink: 0;
			}

			.logo-main {
				font-family: var(--font-serif);
				font-size: 1.5rem;
				text-transform: uppercase;
				letter-spacing: 0.2rem;
				font-weight: 500;
				line-height: 1;
			}

			.header-contact-info {
				display: flex;
				align-items: center;
				gap: 0.8rem;
				color: rgba(255,255,255,0.6);
				font-size: 0.55rem;
				text-transform: uppercase;
				letter-spacing: 0.1rem;
				font-weight: 500;
				border-left: 1px solid rgba(255,255,255,0.15);
				padding-left: 1.5rem;
				margin-top: 0.2rem;
				height: 1rem;
				transition: all 0.4s ease;
			}

			#main-header.scrolled .header-contact-info {
				color: var(--slate);
				border-left-color: rgba(0,0,0,0.1);
			}

			.dot {
				color: var(--accent);
			}

			#main-header.scrolled .logo-horizontal {
				color: var(--navy);
			}

			.header-right {
				display: flex;
				align-items: center;
				gap: 2rem;
			}

			.direct-nav {
				display: flex;
				gap: 1.5rem;
			}

			.direct-nav a {
				text-transform: uppercase;
				font-size: 0.7rem;
				letter-spacing: 0.15rem;
				font-weight: 700;
				color: var(--white);
				transition: color 0.3s ease;
			}

			#main-header.scrolled .direct-nav a {
				color: var(--navy);
			}

			.direct-nav a:hover {
				color: var(--accent);
			}

			.btn-book-now-top {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 0.6rem;
				background: var(--white);
				color: var(--navy);
				padding: 0.8rem 1.8rem;
				font-size: 0.75rem;
				letter-spacing: 0.15rem;
				font-weight: 800;
				text-transform: uppercase;
				box-shadow: 0 4px 15px rgba(0,0,0,0.1);
				transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
				flex-shrink: 0;
				border-radius: 4px;
			}

			#main-header.scrolled .btn-book-now-top {
				background: var(--accent);
				color: var(--white);
				box-shadow: 0 6px 20px rgba(37, 99, 235, 0.2);
			}

			.btn-book-now-top:hover {
				transform: translateY(-3px) scale(1.05);
				box-shadow: 0 10px 30px rgba(0,0,0,0.15);
				background: var(--white);
				color: var(--accent);
			}

			#main-header.scrolled .btn-book-now-top:hover {
				background: #1d4ed8;
				color: var(--white);
				box-shadow: 0 12px 40px rgba(37, 99, 235, 0.4);
			}

			.btn-book-now-top::after {
				content: "→";
				font-size: 1.1rem;
				transition: transform 0.3s ease;
			}

			.btn-book-now-top:hover::after {
				transform: translateX(4px);
			}

			/* Footer */
			footer {
				background-color: var(--navy);
				color: var(--white);
				padding: 8rem 0;
			}

			.footer-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 8rem;
			}

			footer h3 {
				color: var(--accent);
				font-size: 2.2rem;
				margin-bottom: 0.5rem;
			}

			footer h4 {
				color: var(--white);
				font-size: 0.75rem;
				text-transform: uppercase;
				letter-spacing: 0.2rem;
				margin-bottom: 2rem;
			}

			.footer-brand p {
				color: rgba(255,255,255,0.7);
				font-size: 0.95rem;
			}

			.footer-nav {
				display: flex;
				gap: 5rem;
			}

			.nav-column a {
				display: block;
				margin-bottom: 1rem;
				font-size: 0.85rem;
				color: rgba(255,255,255,0.6);
				text-transform: uppercase;
				letter-spacing: 0.1rem;
			}

			.nav-column a:hover {
				color: var(--accent);
			}

			@media (max-width: 1024px) {
				#main-header {
					padding: 1.5rem 5%;
				}
				.logo-main {
					font-size: 1.3rem;
				}
				.direct-nav {
					display: none;
				}
				.header-right {
					gap: 2rem;
				}
				.footer-grid {
					grid-template-columns: 1fr;
					gap: 4rem;
				}
			}

			@media (max-width: 768px) {
				.header-contact-info {
					display: none;
				}
				.logo-main {
					font-size: 1.1rem;
					letter-spacing: 0.1rem;
				}
				.btn-book-now-top {
					padding: 0.6rem 1.2rem;
					font-size: 0.65rem;
					gap: 0.4rem;
				}
				.btn-book-now-top::after {
					font-size: 0.9rem;
				}
				#main-header {
					background: rgba(0,0,0,0.1);
					backdrop-filter: blur(5px);
				}
				#main-header.scrolled {
					background: var(--white);
				}
			}
		</style>

		<script>
			const header = document.getElementById('main-header');
			const isHome = window.location.pathname === '/';
			
			if (isHome) {
				window.addEventListener('scroll', () => {
					if (window.scrollY > 50) {
						header?.classList.add('scrolled');
					} else {
						header?.classList.remove('scrolled');
					}
				});
			} else {
				header?.classList.add('scrolled');
			}
		</script>
	</body>
</html>
