---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Casco Bay Hotel | A Modern Maine Getaway in South Portland">
	<!-- Section 1: Main Landing Page -->
	<section id="home" class="hero-press">
		<!-- Hero Image Placeholder (Fades out when video is ready) -->
		<div id="hero-placeholder" class="hero-image-overlay" style={`background: url('${import.meta.env.BASE_URL}main-hero-bg.png') center/cover no-repeat;`}></div>
		
		<video
			id="hero-video"
			class="hero-video"
			autoplay
			muted
			loop
			playsinline
		>
			<source src={`${import.meta.env.BASE_URL}Lighthouse_Pan_Video.mov`} type="video/mp4" />
		</video>
		
		<div class="hero-overlay-press"></div>

		<div class="hero-container">
			<div class="hero-content-press">
				<div class="hero-logo-wrapper fade-in-up">
					<svg class="main-logo" viewBox="0 0 240 240" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect x="20" y="20" width="200" height="200" stroke="white" stroke-width="2" />
						<text x="50" y="150" font-family="var(--font-serif)" font-size="110" fill="white" font-weight="500">C</text>
						<text x="130" y="150" font-family="var(--font-serif)" font-size="110" fill="white" font-weight="300" opacity="0.9">B</text>
						<text x="120" y="195" text-anchor="middle" font-family="var(--font-sans)" font-size="9" fill="white" letter-spacing="0.3em" font-weight="700" text-transform="uppercase">CASCO BAY HOTEL</text>
					</svg>
				</div>
				<div class="hero-slogan-box fade-in-up">
					<div class="slogan-line">Classic Maine</div>
					<div class="slogan-divider-line"></div>
					<div class="slogan-line">Modern Comfort</div>
				</div>
			</div>

			<div class="booking-widget-container fade-in">
				<div class="booking-card">
					<div class="date-row">
						<div class="date-box" id="checkin-trigger">
							<span class="label">Check In</span>
							<input type="date" id="checkin-date" class="hidden-input" />
							<span class="day" id="checkin-day">--</span>
							<span class="month" id="checkin-month">Select</span>
						</div>
						<div class="date-box" id="checkout-trigger">
							<span class="label">Check Out</span>
							<input type="date" id="checkout-date" class="hidden-input" />
							<span class="day" id="checkout-day">--</span>
							<span class="month" id="checkout-month">Select</span>
						</div>
					</div>
					
					<div class="booking-details-row">
						<div class="rooms-section">
							<div class="custom-input-box">
								<select id="rooms-count" class="select-reset">
									<option value="1" selected>1 ROOM</option>
									<option value="2">2 ROOMS</option>
									<option value="3">3 ROOMS</option>
									<option value="4">4 ROOMS</option>
									<option value="5">5 ROOMS</option>
								</select>
							</div>
						</div>
						<div class="occupancy-section">
							<div class="custom-input-box">
								<select id="adults-count" class="select-reset">
									<option value="1">1 ADULT</option>
									<option value="2" selected>2 ADULTS</option>
									<option value="3">3 ADULTS</option>
									<option value="4">4 ADULTS</option>
									<option value="5">5 ADULTS</option>
									<option value="6">6 ADULTS</option>
									<option value="7">7 ADULTS</option>
									<option value="8">8 ADULTS</option>	
									<option value="9">9 ADULTS</option>
									<option value="10">10 ADULTS</option>
								</select>
							</div>
						</div>
						
						<div class="promo-section">
							<div class="custom-input-box">
								<input type="text" id="promo-code" placeholder="PROMO" class="input-reset" />
							</div>
						</div>
					</div>

					<button id="main-book-btn" class="btn-primary" style="width: 100%; padding: 1.4rem;">
						BOOK YOUR STAY
					</button>
				</div>
			</div>
		</div>
	</section>

	<script>
		const video = document.getElementById('hero-video') as HTMLVideoElement;
		const placeholder = document.getElementById('hero-placeholder');

		if (video && placeholder) {
			video.onplaying = () => {
				placeholder.style.opacity = '0';
				setTimeout(() => {
					placeholder.style.display = 'none';
				}, 1500);
			};
		}

		// Booking Logic
		const checkinInput = document.getElementById('checkin-date') as HTMLInputElement;
		const checkoutInput = document.getElementById('checkout-date') as HTMLInputElement;
		const adultsSelect = document.getElementById('adults-count') as HTMLSelectElement;
		const roomsSelect = document.getElementById('rooms-count') as HTMLSelectElement;
		const promoInput = document.getElementById('promo-code') as HTMLInputElement;
		const mainBookBtn = document.getElementById('main-book-btn');

		// Helper to get local YYYY-MM-DD
		const getLocalDateStr = (date: Date) => {
			const offset = date.getTimezoneOffset();
			const localDate = new Date(date.getTime() - (offset * 60 * 1000));
			return localDate.toISOString().split('T')[0];
		};

		const today = new Date();
		const tomorrow = new Date();
		tomorrow.setDate(tomorrow.getDate() + 1);

		if (checkinInput && checkoutInput) {
			checkinInput.value = getLocalDateStr(today);
			checkoutInput.value = getLocalDateStr(tomorrow);
			updateDateDisplay();
		}

		function updateDateDisplay() {
			const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
			
			if (checkinInput.value) {
				const d = new Date(checkinInput.value + 'T00:00:00');
				document.getElementById('checkin-day')!.textContent = d.getDate().toString();
				document.getElementById('checkin-month')!.textContent = months[d.getMonth()];
			}
			if (checkoutInput.value) {
				const d = new Date(checkoutInput.value + 'T00:00:00');
				document.getElementById('checkout-day')!.textContent = d.getDate().toString();
				document.getElementById('checkout-month')!.textContent = months[d.getMonth()];
			}
		}

		[checkinInput, checkoutInput].forEach(el => el?.addEventListener('change', updateDateDisplay));

		function getBookingUrl() {
			const checkin = checkinInput.value;
			const checkout = checkoutInput.value;
			const adults = adultsSelect.value;
			const rooms = roomsSelect?.value || '1';
			const promo = promoInput?.value || '';
			
			let url = `https://www.choicehotels.com/maine/south-portland/ascend-hotels/me049?checkInDate=${checkin}&checkOutDate=${checkout}&adults=${adults}&rooms=${rooms}`;
			
			if (promo) {
				url += `&clientId=${promo}`;
			}
			
			return url;
		}

		mainBookBtn?.addEventListener('click', () => {
			window.open(getBookingUrl(), '_blank');
		});

		// Global redirect for other Book Now buttons
		document.querySelectorAll('.btn-primary:not(#main-book-btn)').forEach(btn => {
			btn.addEventListener('click', (e) => {
				e.preventDefault();
				window.open(getBookingUrl(), '_blank');
			});
		});
	</script>

	<!-- Section 2: The Experience (Staggered Layout) -->
	<section class="experience bg-coastal textured">
		<div class="container">
			<!-- Block 1: About Us -->
			<div class="experience-block">
				<div class="experience-visual">
					<img src={`${import.meta.env.BASE_URL}assets/amenities/exterior.jpg`} alt="Casco Bay Exterior" />
				</div>
				<div class="experience-content">
					<span class="eyebrow-dash">About Us</span>
					<h2 class="navy-text">Unwind in Style <span class="serif-italic">with</span> <br/> <strong>Casco Bay Hotel</strong></h2>
					<p>Located in South Portland, our hotel captures the moody elegance of the Atlantic coast. We've created a refuge that celebrates local character through refined design and authentic Maine hospitality.</p>
					<p>Every detail has been thoughtfully curated to ensure your stay is as restorative as the rugged beauty of the Maine coastline itself.</p>
					<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me049" class="btn-primary">Book Now</a>
				</div>
			</div>

			<!-- Block 2: Philosophy -->
			<div class="experience-block reverse">
				<div class="experience-visual">
					<img src={`${import.meta.env.BASE_URL}assets/amenities/lobby.png`} alt="Casco Bay Lobby" />
				</div>
				<div class="experience-content">
					<span class="eyebrow-dash">Philosophy</span>
					<h2 class="navy-text">Our Commitment <span class="serif-italic">to</span> <br/> <strong>Excellence</strong></h2>
					<p>Following our complete renovation, we've focused on providing more than just a room. Our philosophy is rooted in the belief that luxury should be genuine, accessible, and deeply connected to its surroundings.</p>
					<p>From our coastal breakfast to our high-speed connectivity, every element is designed to facilitate a seamless and elevated guest experience.</p>
					<a href="#amenities" class="btn-learn">Our Amenities</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Section 3: The Suites (Vertical Gallery Scrolling) -->
	<section id="rooms" class="suites-vertical-gallery bg-navy">
		<div class="suites-split-wrapper">
			<!-- Left: Sticky Visual -->
			<div class="suites-visual-sticky">
				<div class="sticky-image-container">
					<img id="suite-img-king" src={`${import.meta.env.BASE_URL}assets/rooms/king.jpg`} alt="Deluxe King" class="active" />
					<img id="suite-img-queen" src={`${import.meta.env.BASE_URL}assets/rooms/queen.jpg`} alt="Deluxe Queen" />
					<img id="suite-img-double" src={`${import.meta.env.BASE_URL}assets/rooms/double.jpg`} alt="Double Beds" />
				</div>
			</div>

			<!-- Right: Scrollable Details -->
			<div class="suites-details-scroll">
				<div class="suite-content-block" data-suite="king">
					<div class="suite-info-inner">
						<span class="eyebrow">Signature Suite</span>
						<h2>Deluxe King</h2>
						<div class="suite-specs-line">
							<span>2 Guests</span>
							<span>1 King Size Bed</span>
							<span>350 SQFT</span>
						</div>
						<p>Our premier suite offering expansive space and residential-grade comfort. Features a plush King-size bed and a refined coastal aesthetic.</p>
						<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me049" class="btn-primary-suites">Book Your Stay</a>
					</div>
				</div>

				<div class="suite-content-block" data-suite="queen">
					<div class="suite-info-inner">
						<span class="eyebrow">Modern Retreat</span>
						<h2>Deluxe Queen</h2>
						<div class="suite-specs-line">
							<span>2 Guests</span>
							<span>1 Queen Size Bed</span>
							<span>280 SQFT</span>
						</div>
						<p>A perfectly balanced space for the efficient traveler. The Deluxe Queen offers refined amenities in an intimate, restful layout.</p>
						<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me049" class="btn-primary-suites">Book Your Stay</a>
					</div>
				</div>

				<div class="suite-content-block" data-suite="double">
					<div class="suite-info-inner">
						<span class="eyebrow">Family Suite</span>
						<h2>Double Suite</h2>
						<div class="suite-specs-line">
							<span>4 Guests</span>
							<span>2 Double Beds</span>
							<span>400 SQFT</span>
						</div>
						<p>Ample space and dual-bed configurations make this the ideal sanctuary for families exploring the South Portland area.</p>
						<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me049" class="btn-primary-suites">Book Your Stay</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script>
		// Vertical Gallery Interaction
		const suiteBlocks = document.querySelectorAll('.suite-content-block');
		const suiteImages = document.querySelectorAll('.sticky-image-container img');
		const stickyVisual = document.querySelector('.suites-visual-sticky') as HTMLElement;
		const gallerySection = document.getElementById('rooms') as HTMLElement;

		// Handle Sticky Positioning (Fallback for CSS Sticky)
		function handleSticky() {
			if (!stickyVisual || !gallerySection) return;

			const rect = gallerySection.getBoundingClientRect();
			const sectionTop = rect.top;
			const sectionBottom = rect.bottom;

			const wrapper = gallerySection.querySelector('.suites-split-wrapper') as HTMLElement;
			const wrapperRect = wrapper.getBoundingClientRect();

			if (sectionTop <= 0 && sectionBottom >= window.innerHeight) {
				stickyVisual.classList.add('is-fixed');
				stickyVisual.classList.remove('is-bottom');
				stickyVisual.style.left = `${wrapperRect.left}px`;
				stickyVisual.style.width = `${wrapperRect.width / 2}px`;
			} else if (sectionBottom < window.innerHeight) {
				stickyVisual.classList.remove('is-fixed');
				stickyVisual.classList.add('is-bottom');
				stickyVisual.style.left = '0';
				stickyVisual.style.width = '50%';
			} else {
				stickyVisual.classList.remove('is-fixed');
				stickyVisual.classList.remove('is-bottom');
				stickyVisual.style.left = '0';
				stickyVisual.style.width = '50%';
			}
		}

		window.addEventListener('scroll', handleSticky);
		window.addEventListener('resize', handleSticky);
		handleSticky(); // Initial check

		// Image Swap Observer
		const observerOptions = {
			root: null,
			threshold: 0.5,
			rootMargin: "-10% 0px -10% 0px"
		};

		const suiteObserver = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('is-active');
					const suiteId = entry.target.getAttribute('data-suite');
					suiteImages.forEach(img => {
						if (img.id === `suite-img-${suiteId}`) {
							img.classList.add('active');
						} else {
							img.classList.remove('active');
						}
					});
				} else {
					entry.target.classList.remove('is-active');
				}
			});
		}, observerOptions);

		suiteBlocks.forEach(block => suiteObserver.observe(block));
	</script>

	<!-- Section 4: Amenities (Magazine Layout with 2 Columns) -->
	<section id="amenities" class="amenities-magazine bg-mist textured">
		<div class="container">
			<div class="amenities-magazine-layout">
				<div class="amenity-visual">
					<div class="visual-stack">
						<div class="visual-main" style={`background-image: url('${import.meta.env.BASE_URL}assets/amenities/food.png')`}></div>
						<div class="visual-accent"></div>
					</div>
				</div>
				<div class="amenity-content-right">
					<div class="amenity-intro-wrap">
						<span class="eyebrow">The Experience</span>
						<h2 class="navy-text">Refined <span class="serif-italic">Amenities</span></h2>
					</div>
					
					<!-- Shared Grid for Caption and Lists -->
					<div class="amenity-grid-main">
						<div class="amenity-caption-col">
							<p>Following our complete 2022 renovation, every detail has been refined to ensure your Portland stay is both productive and restorative.</p>
						</div>
						<div class="amenity-cta-col">
							<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me049" class="btn-primary">Book Now</a>
						</div>

						<div class="amenity-col">
							<span class="sans-caps">Wellness & Travel</span>
							<ul>
								<li>Free 24hr Airport Shuttle</li>
								<li>Hot Coastal Breakfast</li>
								<li>24hr Wellness Suite</li>
								<li>Complimentary Parking</li>
							</ul>
						</div>
						<div class="amenity-col">
							<span class="sans-caps">In-Suite Luxury</span>
							<ul>
								<li>Premium High-Speed WiFi</li>
								<li>Refrigerator & Microwave</li>
								<li>Keurig Coffee Makers</li>
								<li>Plush Bedding & Linens</li>
							</ul>
						</div>
						<div class="amenity-col">
							<span class="sans-caps">Coastal Leisure</span>
							<ul>
								<li>Complimentary Bike Rentals</li>
								<li>Beach Gear & Towels</li>
								<li>Local Attraction Passes</li>
								<li>Seasonal Outdoor Seating</li>
							</ul>
						</div>
						<div class="amenity-col">
							<span class="sans-caps">Modern Convenience</span>
							<ul>
								<li>24hr Business Station</li>
								<li>Electric Vehicle Charging</li>
								<li>Express Mobile Check-in</li>
								<li>Digital Guest Directory</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Section 5: Location (Map Background Style) -->
	<section id="location" class="location-map-style" style={`background-image: url('${import.meta.env.BASE_URL}assets/location/map.jpg')`}>
		<div class="container">
			<div class="location-map-grid">
				<!-- Left: Info Column -->
				<div class="location-map-info">
					<div class="location-hotel-visual">
						<img src={`${import.meta.env.BASE_URL}assets/location/building.jpg`} alt="Casco Bay Hotel Building" />
					</div>
					<div class="location-text-content">
						<h2>SOUTH PORTLAND AT YOUR <br/> FINGERTIPS</h2>
						<p>Perfectly situated in South Portland, our hotel provides effortless access to the Portland International Jetport, the historic Old Port district, and the stunning Maine coastline. Discover what true convenience looks like.</p>
						
						<div class="location-contact-minimal">
							<p>80 John Roberts Rd, South Portland, ME 04106</p>
							<p><strong>Phone:</strong> (207) 558-4341</p>
							<p><strong>Email:</strong> reservations@cascobayhotel.com</p>
						</div>

						<div class="location-ctas-map">
							<a href="https://www.google.com/maps?client=safari&rls=en&oe=UTF-8&um=1&ie=UTF-8&fb=1&gl=us&sa=X&geocode=KZWazLkVmbJMMbdoIsttNxrP&daddr=80+John+Roberts+Rd,+South+Portland,+ME+04106" target="_blank" class="link-underlined-dark">Open in Maps &rarr;</a>
							<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me071" class="btn-primary">Book Now</a>
						</div>
					</div>
				</div>

				<!-- Right: Empty for Map Visual -->
				<div class="location-map-pins"></div>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* Fixed Hero Layout */
	.hero-press {
		position: relative;
		height: 100vh;
		width: 100%;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--white);
		padding: 0 !important; /* Override global section padding */
	}

	.hero-image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 3;
		opacity: 0.9;
		transition: opacity 1.5s ease-in-out;
	}

	.hero-video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 1;
		opacity: 0.9;
	}

	.hero-overlay-press {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.5) 100%);
		z-index: 2;
	}

	.hero-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		max-width: 1400px;
		padding: 0 4rem;
		position: relative;
		z-index: 10;
	}

	.hero-content-press {
		max-width: 600px;
		display: flex;
		align-items: center;
		gap: 3rem;
	}

	.hero-logo-wrapper {
		width: 180px;
		height: 180px;
		flex-shrink: 0;
	}

	.main-logo {
		width: 100%;
		height: 100%;
	}

	.hero-slogan-box {
		color: var(--white);
		text-transform: uppercase;
		letter-spacing: 0.5rem;
		font-size: 1.15rem;
		border-left: 1px solid rgba(255,255,255,0.3);
		padding-left: 3.5rem;
	}

	.slogan-divider-line {
		width: 40px;
		height: 1px;
		background-color: var(--accent);
		margin: 0.5rem 0;
	}

	.booking-widget-container {
		width: 380px;
	}

	.booking-card {
		background: var(--bg-warm);
		padding: 1.5rem; /* Reduced from 2.5rem */
		display: flex;
		flex-direction: column;
		gap: 1rem; /* Reduced from 1.5rem */
		color: var(--text-main);
		box-shadow: 0 30px 60px rgba(0,0,0,0.3);
		position: relative;
	}

	.hidden-input {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		cursor: pointer;
		z-index: 5;
	}

	.date-box {
		position: relative;
		background: var(--bg-mist);
		padding: 0.8rem; /* Slightly reduced */
		text-align: center;
	}

	.select-reset, .input-reset {
		background: transparent;
		border: none;
		width: 100%;
		font-family: var(--font-sans);
		font-size: 0.6rem;
		font-weight: 800;
		text-transform: uppercase;
		color: var(--navy-deep);
		cursor: pointer;
		text-align: center;
		text-align-last: center; /* Vital for centering select text */
		outline: none;
		padding: 0;
		margin: 0;
		display: block;
		appearance: none;
		-webkit-appearance: none;
	}

	.date-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 0.5rem;
	}

	.date-box .label {
		font-size: 0.55rem;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		display: block;
		margin-bottom: 0.5rem;
		opacity: 0.8;
	}

	.date-box .day {
		font-family: var(--font-serif);
		font-size: 2.2rem;
		display: block;
		line-height: 1;
		margin-bottom: 0.2rem;
	}

	.date-box .month {
		font-size: 0.65rem;
		text-transform: uppercase;
		font-weight: 800;
		letter-spacing: 0.05em;
	}

	.booking-details-row {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 0.5rem;
	}

	.custom-input-box {
		background: var(--bg-mist);
		height: 45px; /* Fixed height for consistency */
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0 0.5rem;
	}

	.input-reset::placeholder {
		color: rgba(16, 42, 67, 0.4);
	}

	/* Experience Staggered Layout */
