---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Casco Bay Hotel | A Modern Maine Getaway in South Portland">
	<!-- Section 1: Main Landing Page -->
	<section id="home" class="hero-press">
		<!-- Hero Image Placeholder (Fades out when video is ready) -->
		<div id="hero-placeholder" class="hero-image-overlay" style={`background: url('${import.meta.env.BASE_URL}main-hero-bg.png') center/cover no-repeat;`}></div>
		
		<video
			id="hero-video"
			class="hero-video"
			autoplay
			muted
			loop
			playsinline
		>
			<source src={`${import.meta.env.BASE_URL}Lighthouse_Pan_Video.mp4`} type="video/mp4" />
		</video>
		
		<div class="hero-overlay-press"></div>

		<div class="hero-container">
			<div class="hero-content-press">
				<div class="hero-logo-wrapper fade-in-up">
					<svg class="main-logo" viewBox="0 0 240 240" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect x="20" y="20" width="200" height="200" stroke="white" stroke-width="2" />
						<text x="50" y="150" font-family="var(--font-serif)" font-size="110" fill="white" font-weight="500">C</text>
						<text x="130" y="150" font-family="var(--font-serif)" font-size="110" fill="white" font-weight="300" opacity="0.9">B</text>
						<text x="120" y="195" text-anchor="middle" font-family="var(--font-sans)" font-size="9" fill="white" letter-spacing="0.3em" font-weight="700" text-transform="uppercase">CASCO BAY HOTEL</text>
					</svg>
				</div>
				<div class="hero-slogan-box fade-in-up">
					<div class="slogan-line">Classic Maine</div>
					<div class="slogan-divider-line"></div>
					<div class="slogan-line">Modern Comfort</div>
				</div>
			</div>

			<div class="booking-widget-container fade-in">
				<div class="booking-card">
					<div class="date-row">
						<div class="date-box">
							<span class="label">Check In</span>
							<span class="day">20</span>
							<span class="month">Feb</span>
						</div>
						<div class="date-box">
							<span class="label">Check Out</span>
							<span class="day">27</span>
							<span class="month">Feb</span>
						</div>
					</div>
					
					<div class="booking-details-row">
						<div class="occupancy-section">
							<div class="custom-input-box">
								<span>1 Room, 1 Guest</span>
							</div>
						</div>
						<div class="promo-section">
							<div class="custom-input-box">
								<span>Promo Code</span>
							</div>
						</div>
					</div>

					<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me071" class="btn-primary" style="width: 100%; padding: 1.4rem;">
						BOOK YOUR STAY
					</a>
				</div>
			</div>
		</div>
	</section>

	<script>
		const video = document.getElementById('hero-video') as HTMLVideoElement;
		const placeholder = document.getElementById('hero-placeholder');

		if (video && placeholder) {
			video.onplaying = () => {
				placeholder.style.opacity = '0';
				setTimeout(() => {
					placeholder.style.display = 'none';
				}, 1500);
			};
		}
	</script>

	<!-- Section 2: The Spirit (Rich Coastal Background) -->
	<section class="spirit bg-coastal textured">
		<div class="container grid-2">
			<div class="spirit-content">
				<span class="eyebrow">The Experience</span>
				<h2 class="navy-text">A modern sanctuary <br/> in the heart of <span class="serif-italic">Maine</span>.</h2>
				<p>Located in South Portland, Casco Bay Hotel captures the moody elegance of the Atlantic coast. We've created a refuge that celebrates local character through refined design and authentic Maine hospitality.</p>
				<div class="spirit-links">
					<a href="#amenities" class="link-underlined">Our Amenities</a>
					<a href="/business-web-apps/rooms" class="link-underlined">Our Suites</a>
				</div>
			</div>
			<div class="spirit-image-box">
				<div class="image-accent-border">
					<img src={`${import.meta.env.BASE_URL}assets/amenities/lobby.png`} alt="Casco Bay Lobby" />
				</div>
			</div>
		</div>
	</section>

	<!-- Section 3: The Suites (Deep Navy Section) -->
	<section id="rooms" class="suites-featured bg-navy textured">
		<div class="container">
			<div class="suites-header">
				<span class="eyebrow">Accommodations</span>
				<h2>The <span class="serif-italic">Atlantic</span> Collection</h2>
			</div>
			<div class="suites-grid">
				<div class="suite-item">
					<div class="suite-visual">
						<img src={`${import.meta.env.BASE_URL}assets/rooms/king.jpg`} alt="Deluxe King" />
					</div>
					<div class="suite-meta">
						<div class="suite-titles">
							<h3>Deluxe King</h3>
							<span class="price">From $189 / Night</span>
						</div>
						<a href="/business-web-apps/rooms" class="btn-primary">Reserve Suite</a>
					</div>
				</div>
				<div class="suite-item">
					<div class="suite-visual">
						<img src={`${import.meta.env.BASE_URL}assets/rooms/queen.jpg`} alt="Deluxe Queen" />
					</div>
					<div class="suite-meta">
						<div class="suite-titles">
							<h3>Deluxe Queen</h3>
							<span class="price">From $159 / Night</span>
						</div>
						<a href="/business-web-apps/rooms" class="btn-primary">Reserve Suite</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Section 4: Amenities (Mist Background with Grouped Boxes) -->
	<section id="amenities" class="amenities-narrative bg-mist textured">
		<div class="container">
			<div class="amenities-layout">
				<div class="amenities-text-grid">
					<div class="amenity-intro-col">
						<span class="eyebrow">The Comforts</span>
						<h2 class="navy-text">Coastal <br/> <span class="serif-italic">Essentials</span></h2>
						<p>From the first cup of morning coffee to your late-night return, our amenities are designed for the seamless South Portland experience.</p>
					</div>
					<div class="amenity-list-col">
						<div class="amenity-group-box">
							<span class="sans-caps">Stay & Explore</span>
							<ul>
								<li>Free Airport Shuttle</li>
								<li>Daily Coastal Breakfast</li>
								<li>24hr Wellness Suite</li>
								<li>High-Speed Connectivity</li>
							</ul>
						</div>
						<div class="amenity-group-box">
							<span class="sans-caps">In-Suite Details</span>
							<ul>
								<li>Microwave & Refrigerator</li>
								<li>Coffee & Tea Station</li>
								<li>Premium Streaming TV</li>
								<li>Plush Bath Linens</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="amenities-visual-full-bleed">
					<img src={`${import.meta.env.BASE_URL}assets/amenities/lobby.png`} alt="Wellness Center" />
				</div>
			</div>
		</div>
	</section>

	<!-- Section 5: Location (Slate Background) -->
	<section id="location" class="location-minimal bg-slate textured">
		<div class="container">
			<div class="location-grid-clean">
				<div class="location-info-minimal">
					<span class="eyebrow">South Portland</span>
					<h2>Visit <span class="serif-italic">Us</span></h2>
					<p>80 John Roberts Rd, <br/> South Portland, ME 04106</p>
					<div class="location-details-box">
						<p><strong>Phone:</strong> (207) 558-4341</p>
						<p><strong>Email:</strong> reservations@cascobayhotel.com</p>
					</div>
					<div class="location-ctas">
						<a href="https://www.google.com/maps" target="_blank" class="link-underlined" style="color: white;">Open in Maps &rarr;</a>
						<a href="https://www.choicehotels.com/maine/south-portland/ascend-hotels/me071" class="btn-primary">Book Now</a>
					</div>
				</div>
				<div class="location-visual-minimal">
					<div class="map-frame">
						<div class="map-box" style={`background-image: url('https://images.unsplash.com/photo-1507041957456-9c397ce39c97?q=80&w=1974&auto=format&fit=crop')`}></div>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* Fixed Hero Layout */
	.hero-press {
		position: relative;
		height: 100vh;
		width: 100%;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--white);
		padding: 0 !important; /* Override global section padding */
	}

	.hero-image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 3;
		opacity: 0.8;
		transition: opacity 1.5s ease-in-out;
	}

	.hero-video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 1;
		opacity: 0.9;
	}

	.hero-overlay-press {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.5) 100%);
		z-index: 2;
	}

	.hero-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		max-width: 1400px;
		padding: 0 4rem;
		position: relative;
		z-index: 10;
	}

	.hero-content-press {
		max-width: 600px;
		display: flex;
		align-items: center;
		gap: 3rem;
	}

	.hero-logo-wrapper {
		width: 180px;
		height: 180px;
		flex-shrink: 0;
	}

	.main-logo {
		width: 100%;
		height: 100%;
	}

	.hero-slogan-box {
		color: var(--white);
		text-transform: uppercase;
		letter-spacing: 0.5rem;
		font-size: 1.15rem;
		border-left: 1px solid rgba(255,255,255,0.3);
		padding-left: 3.5rem;
	}

	.slogan-divider-line {
		width: 40px;
		height: 1px;
		background-color: var(--accent);
		margin: 0.5rem 0;
	}

	.booking-widget-container {
		width: 380px;
	}

	.booking-card {
		background: var(--bg-warm);
		padding: 2.5rem;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		color: var(--text-main);
		box-shadow: 0 30px 60px rgba(0,0,0,0.3);
	}

	.date-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.date-box {
		background: var(--bg-mist);
		padding: 1rem;
		text-align: center;
	}

	.date-box .label {
		font-size: 0.6rem;
		text-transform: uppercase;
		letter-spacing: 0.1rem;
		display: block;
		margin-bottom: 0.5rem;
	}

	.date-box .day {
		font-family: var(--font-serif);
		font-size: 2.2rem;
		display: block;
		line-height: 1;
	}

	.date-box .month {
		font-size: 0.7rem;
		text-transform: uppercase;
		font-weight: 700;
	}

	.booking-details-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.custom-input-box {
		background: var(--bg-mist);
		padding: 0.8rem;
		font-size: 0.75rem;
		text-align: center;
	}

	/* Rich Color Layouts */
	.grid-2 {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 8rem;
		align-items: center;
	}

	.navy-text { color: var(--navy-deep); }

	.spirit-content h2 { font-size: 4rem; margin-bottom: 2rem; }
	.spirit-content p { font-size: 1.15rem; color: var(--text-muted); line-height: 1.8; margin-bottom: 3rem; }
	.spirit-links { display: flex; gap: 3rem; }

	.link-underlined {
		font-family: var(--font-sans);
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: 0.7rem;
		font-weight: 700;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid var(--accent);
	}

	.image-accent-border {
		padding: 1.5rem;
		background: var(--white);
		border: 1px solid var(--border-blue);
		box-shadow: 0 30px 60px rgba(0,0,0,0.1);
	}
	.spirit-image-box img { width: 100%; height: 650px; object-fit: cover; display: block; }

	.suites-header { text-align: center; margin-bottom: 6rem; }
	.suites-header h2 { font-size: 4.5rem; }
	
	.suites-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; }
	.suite-visual { overflow: hidden; height: 550px; margin-bottom: 2rem; border: 1px solid rgba(255,255,255,0.1); }
	.suite-visual img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s ease; }
	.suite-item:hover img { transform: scale(1.03); }
	.suite-meta { display: flex; justify-content: space-between; align-items: flex-end; }
	.suite-titles h3 { font-size: 1.8rem; margin-bottom: 0.5rem; }
	.suite-titles .price { font-size: 0.85rem; color: #94a3b8; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; }

	.amenities-layout { display: flex; flex-direction: column; gap: 6rem; }
	.amenities-text-grid { display: grid; grid-template-columns: 0.8fr 1.2fr; gap: 8rem; align-items: center; }
	.amenity-intro-col h2 { font-size: 4rem; margin-bottom: 2rem; }
	
	.amenity-list-col { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; }
	.amenity-group-box { background: var(--white); padding: 3rem; border: 1px solid var(--border-blue); }
	.amenity-group-box span { display: block; margin-bottom: 1.5rem; color: var(--accent); }
	.amenity-group-box ul { list-style: none; }
	.amenity-group-box li { font-size: 0.9rem; margin-bottom: 0.8rem; font-weight: 600; color: var(--navy-deep); }
	.amenities-visual-full-bleed img { width: 100%; height: 500px; object-fit: cover; }

	.location-grid-clean { display: grid; grid-template-columns: 0.8fr 1.2fr; gap: 8rem; align-items: center; }
	.location-info-minimal h2 { font-size: 4rem; margin-bottom: 2rem; }
	.location-info-minimal p { font-size: 1.2rem; margin-bottom: 2rem; }
	.location-details-box { margin-bottom: 3rem; opacity: 0.8; font-size: 0.95rem; }
	.location-ctas { display: flex; align-items: center; gap: 3rem; }
	.map-frame { padding: 1.5rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); }
	.map-box { height: 600px; background-size: cover; background-position: center; }

	@media (max-width: 1024px) {
		.hero-container {
			flex-direction: column;
			padding: 10rem 2rem 5rem;
			gap: 4rem;
			text-align: center;
		}
		.hero-content-press {
			flex-direction: column;
			gap: 2rem;
		}
		.hero-slogan-box {
			border-left: none;
			padding-left: 0;
		}
		.grid-2, .suites-grid, .amenity-list-col, .location-grid-clean, .amenities-text-grid {
			grid-template-columns: 1fr;
			gap: 4rem;
		}
		.spirit-image-box img, .suite-visual, .map-box { height: 450px; }
		.spirit-content h2, .suites-header h2, .amenity-intro-col h2, .location-info-minimal h2 { font-size: 3rem; }
	}
</style>